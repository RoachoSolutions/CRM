@model List<RoachoSLN.Entidades.CRM.Prospectos>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="">
                        <a href="~/Prospectos/Registro" class="btn btn-primary ">Nuevo Prospecto</a>
                    </div>
                    <table class="table table-striped table-bordered table-hover " id="editable">
                        <thead>
                            <tr>                                
                                <th>Nombre</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model != null)
                                {
                                    foreach (RoachoSLN.Entidades.CRM.Prospectos _prospecto in Model)
                                    {
                                        <tr data-id="@_prospecto.id">                                            
                                            <td>@_prospecto.nombre @_prospecto.apellido1 @_prospecto.apellido2</td>
                                            <td>@_prospecto.telefono</td>
                                            <td>@_prospecto.correo</td>
                                            <td>@_prospecto.estatus</td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>                                
                                <th>Nombre</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th>Estado</th>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



